<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名:"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/student_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学号:"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/student_id"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/student_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="80dp"
        android:paddingEnd="80dp">

        <RadioButton
            android:id="@+id/sex_boy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="男"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/sex_girl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="女"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="班级:"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/student_class"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="添加"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/button_select"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="查询"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="删除(仅需输入ID)"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_to_frag"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="打开frag"
        android:onClick="openTestFragment"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/p_image"
        android:src="@drawable/img"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="宝可梦ID"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/p_id"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/change_img"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="获取网络图片"
        android:onClick="getUrlImage"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
</LinearLayout>